{
  "manifest_version": 3,
  "name": "Grammar Checker",
  "version": "1.0",
  "description": "An extension for checking grammar efficiently.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/"
  ],
  "icons": {
    "16": "public/icon.png",
    "48": "public/icon.png",
    "128": "public/icon.png"
  },
  "action": {
    "default_popup": "public/index.html",
    "default_icon": "public/icon.png"
  }
}
